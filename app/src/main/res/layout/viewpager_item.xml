<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:gravity="center"
        android:text="해수욕장"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/congestion_1"
        android:layout_width="@dimen/circle_size"
        android:layout_height="@dimen/circle_size"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/circle_margin_top"
        android:src="@color/congestion_red_alpha_20" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/congestion_2"
        android:layout_width="@dimen/circle_size"
        android:layout_height="@dimen/circle_size"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/circle_margin_top"
        android:src="@color/congestion_yellow_alpha_20" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/congestion_3"
        android:layout_width="@dimen/circle_size"
        android:layout_height="@dimen/circle_size"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/circle_margin_top"
        android:src="@color/congestion_green_alpha_20" />

</LinearLayout>